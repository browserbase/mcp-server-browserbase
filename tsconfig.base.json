{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false, 
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@mcp/core": ["packages/core/src"],
      "@mcp/core/*": ["packages/core/src/*"],
      "@mcp/remote/*": ["packages/remote/*"]
    }
  },
  "exclude": ["node_modules", ".next", "dist"]
} 